@model Proyecto_Programado.Model.AjusteDeInventario

@{
    ViewData["Title"] = "AgregarAjuste";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ajuste de Inventario</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Ajuste de Inventario</h1>
        <hr />
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form asp-action="AgregarAjuste">
                    <input type="hidden" name="Id_Inventario" value="@Model.Id_Inventario">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CantidadActual" class="control-label"></label>
                        <input asp-for="CantidadActual" class="form-control" readonly />
                        <span asp-validation-for="CantidadActual" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ajuste" class="control-label"></label>
                        <input asp-for="Ajuste" class="form-control" />
                        <span asp-validation-for="Ajuste" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tipo" class="control-label"></label>
                        <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<Proyecto_Programado.Model.TipoAjuste>()" class="form-control"></select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Observaciones" class="control-label"></label>
                        <textarea asp-for="Observaciones" class="form-control"></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Agregar Ajuste" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-3">
            <a class="btn btn-secondary" asp-action="Index">Regresar</a>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        h1 {
            color: #343a40;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
    </style>
</body>
</html>
