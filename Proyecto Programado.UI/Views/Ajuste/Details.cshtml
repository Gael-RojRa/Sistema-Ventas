@model List<Proyecto_Programado.Model.AjusteDeInventario>

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de Ajustes de Inventario</h1>
@if (Model.Any())
{
@foreach (var ajuste in Model)
{
    <div>
       
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => ajuste.CantidadActual)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ajuste.CantidadActual)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => ajuste.Ajuste)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ajuste.Ajuste)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => ajuste.Tipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ajuste.Tipo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => ajuste.Observaciones)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ajuste.Observaciones)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => ajuste.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ajuste.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => ajuste.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ajuste.UserId)
            </dd>
        </dl>
    </div>
    }
}
else
    {
        <p>No se encontraron ajustes de inventario.</p>
    }

<div>
    <a asp-action="Index" class="btn btn-primary btn-lg">Regresar</a>
</div>

