@model Proyecto_Programado.Model.AperturaDeCaja

@{
    ViewData["Title"] = "Gestión de Caja";
}

<h2>Gestión de Caja</h2>

@if (Model != null)
{
    <p><strong>Fecha de Inicio:</strong> @Model.FechaDeInicio</p>
    <h3>Ventas por Tipo de Pago</h3>
    <table>
        <thead>
            <tr>
                <th>Tipo de Pago</th>
                <th>Monto Acumulado</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.VentasPorTipoPago != null)
            {
                @foreach (var venta in ViewBag.VentasPorTipoPago)
                {
                    <tr>
                        <td>@venta.TipoPago</td>
                        <td>@venta.Monto</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <form asp-action="Cerrar" method="post">
        <button type="submit" class="btn btn-danger">Cerrar Caja</button>
    </form>
}
else
{
    <form asp-action="Abrir" method="post">
        <button type="submit" class="btn btn-primary">Abrir Caja</button>
    </form>
}

<p>@ViewData["Mensaje"]</p>

