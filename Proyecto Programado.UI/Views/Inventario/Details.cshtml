@model Proyecto_Programado.Model.Inventario

@{
    ViewData["Title"] = "Detalles del Inventario";
}

<div class="container my-4">
    <h1 class="text-center text-primary mb-4">Detalles del Inventario</h1>

    <div class="row mb-4">
        <div class="col-md-6 mx-auto p-4 border rounded bg-light shadow">
            <dl class="row">
                <dt class="col-sm-4 text-right">ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-4 text-right">Nombre:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4 text-right">Categoría:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Categoria)</dd>

                <dt class="col-sm-4 text-right">Cantidad:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cantidad)</dd>

                <dt class="col-sm-4 text-right">Precio:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Precio)</dd>
            </dl>
        </div>
    </div>

    <hr />

    <h2 class="text-center text-secondary mb-4">Histórico del Inventario</h2>
    <div class="table-responsive mb-4">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="centered-cell">Tipo de Modificación</th>
                    <th class="centered-cell">Fecha y Hora</th>
                    <th class="centered-cell">Nombre del Usuario</th>
                    <th class="centered-cell">Modificación</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var historico in ViewBag.HistoricoInventarios as List<Proyecto_Programado.Model.HistoricoInventario>)
                {
                    <tr>
                        <td class="centered-cell">@historico.TipoModificacion</td>
                        <td class="centered-cell">@historico.fechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="centered-cell">@historico.nombreUsuario</td>
                        <td class="centered-cell">@Html.Raw(historico.Modificacion?.Replace("\n", "<br>") ?? "")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-primary btn-lg">Volver a la Lista</a>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
    }

    h1, h2 {
        color: #007bff;
    }

    .row > .col-md-6 {
        background-color: #f9f9f9;
    }

    .table {
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .centered-cell {
        text-align: center;
        vertical-align: middle;
    }

    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table-group-divider > tr > td, .table-group-divider > tr > th {
        border-top: 2px solid #dee2e6;
    }
</style>
