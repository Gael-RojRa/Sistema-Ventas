@{
    Layout = null; // Esto excluye el layout para esta vista

    ViewData["Title"] = "Bienvenida";

    var usuario = TempData["Usuario"];
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f7f9fc;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            text-align: center;
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2.5rem;
            color: #333333;
            margin-bottom: 1rem;
        }

        p {
            font-size: 1.2rem;
            color: #666666;
        }

        .btn {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            color: #fff;
            background-color: #e74c3c;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #c0392b;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>¡Bienvenido, @usuario!</h1>
        <p>Nos alegra verte por aquí. Esperamos que disfrutes tu estancia.</p>

        <form asp-area="" asp-controller="Inventario" asp-action="Salir" method="post" class="d-inline">
            <button type="submit" class="btn">Cerrar Sesión</button>
        </form>
    </div>


</body>
</html>
