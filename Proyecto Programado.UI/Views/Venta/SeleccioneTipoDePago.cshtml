@model Proyecto_Programado.Model.Venta

@{
    ViewData["Title"] = "Seleccione Tipo de Pago";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewData["Cantidad"] as string))
{
    <div class="alert alert-danger">
        @ViewData["Cantidad"]
    </div>
}

<form asp-action="SeleccioneTipoDePago" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="TipoDePago" class="control-label"></label>
        <select asp-for="TipoDePago" class="form-control">
            <option value="1">Efectivo</option>
            <option value="2">Tarjeta</option>
            <option value="3">SinpeMovil</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Finalizar Venta" class="btn btn-primary" />


    </div>


</form>